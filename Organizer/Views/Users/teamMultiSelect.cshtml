@model List<Organizer.Entities.User>

<style>
    .top-100 {
        top: 100%
    }

    .bottom-100 {
        bottom: 100%
    }

    .max-h-select {
        max-height: 300px;
    }
</style>

<div class="h-64 mx-auto flex w-full flex-col items-center">
    <div class="px-4 w-full">
        <div class="relative flex flex-col items-center">
            <div class="svelte-1l8159u w-full">
                <div class="my-2 p-1 border-gray-200 bg-white svelte-1l8159u flex rounded border">
                    <div class="flex flex-auto flex-wrap">





                        <div class="m-1 py-1 px-2 bg-white text-white bg-indigo-700 border-indigo-700 flex items-center justify-center rounded-full border font-medium">
                            <div class="flex-initborder-gray-100 w-full max-w-full cursor-pointer rounded-t border-b text-xs font-normal leading-none hover:bg-teal-100ial">HTML</div>
                            <div class="flex flex-auto flex-row-reverse">
                                <div>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x w-4 h-4 ml-2 cursor-pointer rounded-full hover:text-gray-300">
                                        <line x1="18" y1="6" x2="6" y2="18"></line>
                                        <line x1="6" y1="6" x2="18" y2="18"></line>
                                    </svg>
                                </div>
                            </div>
                        </div>





                        <div class="flex-1">
                            <input placeholder="" class="bg-transparent p-1 px-2 text-gray-800 h-full w-full appearance-none outline-none">
                        </div>
                    </div>
                    <div id="userlistButton" onclick="clickUserlistButton()" class="text-gray-300 w-8 py-1 pl-2 pr-1 border-gray-200 svelte-1l8159u flex items-center border-l">
                        <button class="w-6 h-6 text-gray-600 cursor-pointer outline-none focus:outline-none">
                            <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-chevron-up w-4 h-4">
                                <polyline points="18 15 12 9 6 15"></polyline>
                            </svg>
                        </button>
                    </div>
                </div>
            </div>


            <div id="userList" class="top-100 bg-white lef-0 max-h-select svelte-5uyqqj absolute z-40 hidden w-full overflow-y-auto rounded shadow">
                <div class="flex w-full flex-col">
                    
                    @foreach (var item in Model)
                    {
                        <div id="user_@item.Id" class="border-gray-100 w-full cursor-pointer rounded-t border-b hover:bg-teal-100">
                            <div class="p-2 pl-2 border-transparent relative flex w-full items-center border-l-2 hover:border-teal-100">
                                <div class="flex w-full items-center">
                                    <div class="mx-2 leading-6">@item.FullName </div>
                                </div>
                            </div>
                        </div>
                    }




                </div>
            </div>









        </div>
    </div>
</div>

<script>

    function clickUserlistButton() {
        button = document.getElementById("userlistButton")
        userList = document.getElementById("userList")
        userList.classList.toggle("hidden")
    }

</script>