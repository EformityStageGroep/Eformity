                        }
                    })
                    .then(data => {
                        console.log(data); // Log response data
                        // Optionally, you can update the UI or display a success message
                    })
                    .catch(error => {
                        // Handle any errors that occurred during the request
                        console.error('Error:', error);
                    });
            }
    </script>
}
