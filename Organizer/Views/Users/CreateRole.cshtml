@model Organizer.Entities.Role

<form method="post">
    <div class="form-group">
        <label for="title">Title:</label>
        <input type="text" class="form-control" id="title" name="title" required>
    </div>
    <div class="form-group">
        <label for="createTeam">Create Team:</label>
        <input type="checkbox" class="form-control" id="createTeam" name="createTeam">
    </div>
    <div class="form-group">
        <label for="assignTask">Assign Task:</label>
        <input type="checkbox" class="form-control" id="assignTask" name="assignTask">
    </div>
    <button type="submit" class="btn btn-primary">Create Role</button>
</form>
