@using Organizer.Entities

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["title"] - Organizer</title>
        <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
        <script src="https://cdn.tailwindcss.com"></script>
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/Organizer.styles.css" asp-append-version="true" />
        <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.css" rel="stylesheet" />
        <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"></script>
    </head>
    <body class="min-w-[1179]">
        <div class="z-100">
        @Html.Partial("../Home/_sidebarComponent")
        </div>
        <div class="mb-12 ml-4 mr-4 flex-1 lg:pl-72">
            <!-- Render the main content -->
            @RenderBody()
        </div>
       
    <footer class="border-top footer text-muted text-lg">
        <div class="text-white container">
            &copy; 2022 - Organizer - <a asp-area="" asp-controller="Home" asp-action="Home">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>

