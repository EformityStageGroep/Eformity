

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Organizer</title>
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Organizer.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"></script>s
</head>
<body class="min-w-[1179]">

    <div class="flex flex-col h-screen">
        <!-- Top bar section -->
        <div class="top-0 mb-12 h-1/10 w-full z-10">
            <!-- Render the top bar partial -->
            @Html.Partial("../Home/_sectionHeading")
        </div>


       
        <!-- Sidebar section -->
        <div class="hidden lg:fixed lg:inset-y-0 lg:z-50 lg:flex lg:w-72 lg:flex-col">
            <!-- Render the sidebar partial -->
            @Html.Partial("../Home/_sidebarComponent")
        </div>

        
            <!-- Main content section -->

        <div class="flex-1 lg:pl-72 mb-12 ml-4 mr-4">
            <!-- Render the main content -->
            @RenderBody()
        </div>

    </div>



<footer class="border-top footer text-muted text-lg">
    <div class="text-white container">
        &copy; 2022 - Organizer - <a asp-area="" asp-controller="Home" asp-action="Home">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
