            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    var Optie = document.querySelectorAll('.Opties');
                    var contextMenu = document.getElementById('contextMenu');

                    Optie.forEach(function (item) {
                        item.addEventListener('click', function (e) {
                            e.stopPropagation(); // Prevent click on the item from propagating to the document click event
                            var x = e.pageX;
                            var y = e.pageY;
                            showContextMenu(x, y);
                        });
                    });

                    function showContextMenu(x, y) {
                        contextMenu.style.display = 'block';
                        contextMenu.style.left = x + 'px';
                        contextMenu.style.top = y + 'px';
                    }

                    document.addEventListener('click', function (e) {
                        if (!contextMenu.contains(e.target) && e.target.classList.contains('Opties')) {
                            return; // Don't hide context menu if clicking on an item
                        }
                        contextMenu.style.display = 'none';
                    });
                    var options = document.querySelectorAll('.option');
                    options.forEach(function (option) {
                        option.addEventListener('click', function () {
                            document.getElementById('popupContainer').classList.remove('hidden');
                            document.getElementById('closePopup').addEventListener('click', function () {
                                document.getElementById('popupContainer').classList.add('hidden');
                            });
                            var text = option.textContent;
                            //alert(text + ' clicked');
                            contextMenu.style.display = 'none';
                        });
                    });
                });


