<script>
    // JavaScript to handle option selection
    const selectedOptions = [];
    const allOptions = document.querySelectorAll('#options-list li');

    function toggleOptionSelection(optionElement) {
        const optionId = optionElement.id;
        const optionName = optionElement.querySelector('.block').innerText;

        const checkmark = optionElement.querySelector('.checkmark svg');

        // Toggle selection
        if (selectedOptions.includes(optionName)) {
            // Remove option from selected options
            selectedOptions.splice(selectedOptions.indexOf(optionName), 1);
            checkmark.classList.add('hidden');
        } else {
            // Add option to selected options
            selectedOptions.push(optionName);
            checkmark.classList.remove('hidden');
        }

        // Update the display of selected names
        const selectedNamesElement = document.getElementById('selected-names');
        selectedNamesElement.innerText = selectedOptions.length > 0 ? selectedOptions.join(', ') : 'No options selected';
    }

    function filterOptions(event) {
        const query = event.target.value.toLowerCase();
        allOptions.forEach((option) => {
            const optionName = option.querySelector('.block').innerText.toLowerCase();
            if (optionName.includes(query)) {
                option.style.display = '';
            } else {
                option.style.display = 'none';
            }
        });
    }
</script>
